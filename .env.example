# SentimentAsAService Configuration

# Server Configuration
NODE_ENV=development
PORT=3005
LOG_LEVEL=info

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ecosystem_intelligence
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
INTERNAL_SERVICE_KEY=your-internal-service-key-change-this

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Enterprise API Configuration
DEFAULT_RATE_LIMIT_PER_MINUTE=100
DEFAULT_MONTHLY_QUOTA=10000

# ML Configuration
ML_MODEL_PATH=/app/models
TENSORFLOW_CPU_ONLY=true

# Billing Configuration
COST_PER_DATA_POINT_BASIC=0.05
COST_PER_DATA_POINT_PREMIUM=0.01
COST_PER_ML_TRAINING=0.20
COST_PER_ML_INFERENCE=0.05
COST_PER_CORRELATION_ANALYSIS=0.10

# Privacy Configuration
DEFAULT_ANONYMIZATION_LEVEL=advanced
K_ANONYMITY_THRESHOLD=5
DIFFERENTIAL_PRIVACY_EPSILON=1.0

# External Services (if needed)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Research Dataset Configuration
MAX_DATASET_SIZE=1000000
DEFAULT_PRICE_PER_RECORD=0.10

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD_MS=1000